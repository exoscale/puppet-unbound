forward-zone:
  name: "<%= @zone %>"
<% if @forward_address.is_a? Array -%>
<% @forward_address.each do |addr| -%>
  forward-addr: <%= addr %>
<% end -%>
<% elsif @forward_address != '' -%>
  forward-addr: <%= @forward_address %>
<% end -%>
<% if @forward_first != 'no' -%>
  forward-first: <%= @forward_first %>
<% end -%>
